<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LatexEditor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="64"
        x:Class="LatexEditor.Views.EnterTextDialog"
        x:DataType="vm:EnterTextDialogViewModel">

  <Grid RowDefinitions="Auto, Auto"
        ColumnDefinitions="*, *">
    <TextBox x:Name="TextEntry" Grid.Row="0" Grid.ColumnSpan="2" Watermark="{Binding TextBoxWatermark}"/>
    <Button x:Name="OkButton" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="64" HorizontalContentAlignment="Center">Ok</Button>
    <Button x:Name="CancelButton" Grid.Row="1" Grid.Column="1" Width="64" HorizontalContentAlignment="Center">Cancel</Button>
  </Grid>
</Window>
