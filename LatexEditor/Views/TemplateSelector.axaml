<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LatexEditor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LatexEditor.Views.TemplateSelector"
        x:DataType="vm:TemplateSelectorViewModel"
        Title="TemplateSelector">

  <ScrollViewer>
    <Grid x:Name="RootGrid" RowDefinitions="Auto">
      <ItemsControl Grid.Row="0" ItemsSource="{Binding Templates}"/>
    </Grid>
  </ScrollViewer>
</Window>
