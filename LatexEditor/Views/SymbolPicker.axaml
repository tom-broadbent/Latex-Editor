<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LatexEditor.ViewModels"
        xmlns:latex="clr-namespace:AvaloniaMath.Controls;assembly=AvaloniaMath"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LatexEditor.Views.SymbolPicker"
        x:DataType="vm:SymbolPickerViewModel"
        Title="Symbol Picker">

  <Grid>
    <ItemsControl x:Name="SymbolSelection" ItemsSource="{Binding Symbols}" >
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Border Margin="0,10,0,0"
              CornerRadius="5"
              BorderBrush="Gray" BorderThickness="1"
              Padding="5">
            <Button>
              <latex:FormulaBlock Formula="{Binding Latex}" />
            </Button>
          </Border>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>
</Window>
