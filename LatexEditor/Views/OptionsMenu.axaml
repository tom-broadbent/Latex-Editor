<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LatexEditor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LatexEditor.Views.OptionsMenu"
        x:DataType="vm:OptionsMenuViewModel"
        Title="Options">

  <Grid ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto">
    <Grid ColumnDefinitions="Auto, Auto" Grid.Row="0">
      <TextBlock Text="Bibliography Backend" VerticalAlignment="Center" Grid.Column="0"/>
      <ComboBox x:Name="BibBackendCombo" Grid.Column="1"/>
    </Grid>
    <Grid ColumnDefinitions="Auto, Auto" Grid.Row="1">
      <Button x:Name="CancelButton" Grid.Column="0">Cancel</Button>
      <Button x:Name="OkButton" Grid.Column="1">Ok</Button>
    </Grid>
  </Grid>
</Window>
